name: Snyk Security Scan

on:
  push:
    branches:
      - main  # You can modify this to the branch you want to monitor

jobs:
  snyk:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2
        
      - name: Install Snyk CLI
        run: npm install -g snyk

      - name: Run Snyk test
        uses: snyk/actions/test@v2
        with:
          args: --all-projects
